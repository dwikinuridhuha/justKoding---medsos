generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             Int        @id @default(autoincrement())
  fullname       String     @db.VarChar(255)
  email          String     @unique @db.VarChar(255)
  username       String     @unique @db.VarChar(255)
  password       String     @db.VarChar(255)
  bio            String     @db.Text
  image          String?    @db.VarChar(255)
  imageId        String?    @db.VarChar(255)
  followingCount Int        @default(0) @db.Integer
  followerCount  Int        @default(0) @db.Integer
  postCount      Int        @default(0) @db.Integer
  post           Post[]
  comment        Comment[]
  bookmark       Bookmark[]
  followers      Follow[]   @relation("Followers")
  followings     Follow[]   @relation("Followings")
  likes          Likes[]
  createdAt      DateTime   @default(now())
}

model Post {
  id           Int        @id @default(autoincrement())
  userId       Int
  user         User       @relation(fields: [userId], references: [id])
  image        String     @db.VarChar(255)
  imageId      String     @db.VarChar(255)
  caption      String     @db.Text
  commentCount Int        @default(0) @db.Integer
  likeCount    Int        @default(0) @db.Integer
  comment      Comment[]
  bookmark     Bookmark[]
  likes        Likes[]
  createdAt    DateTime   @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  postId    Int
  post      Post     @relation(fields: [postId], references: [id])
  content   String   @db.Text
  createdAt DateTime @default(now())
}

model Bookmark {
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  postId    Int
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())

  @@id([userId, postId])
}

model Likes {
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  postId    Int
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())

  @@id([userId, postId])
}

model Follow {
  followerId  Int
  follower    User     @relation("Followers", fields: [followerId], references: [id])
  followingId Int
  following   User     @relation("Followings", fields: [followingId], references: [id])
  createdAt   DateTime @default(now())

  @@id([followerId, followingId])
}
